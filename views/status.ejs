<!Doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>status</title>
</head>
<body>
  <a href="/public/update_pokemon.html">/pokemon/update</a>
  <% for( let row of data ) { %>
    <p><%= row.number %></p>
    <p><%= row.name %></p>
    <p><%= row.type1 %>
         <% if( row.type2 != null ){ %>
            <td><%= row.type2 %></td>
         <% } %>
    </p>
    <table>
        <tr>
            <td>攻撃</td>
            <td><%= row.attack %></td>
        </tr>
        <tr>
            <td>防御</td>
            <td><%= row.defence %></td>
        </tr>
        <tr>
            <td>HP</td>
            <td><%= row.hp %></td>
        </tr>
        <tr>
            <td><%= row.type1 %></td>
            <% if( row.type2 != null ){ %>
              <td><%= row.type2 %></td>
            <% } %>
        </tr>
    </table>
  <% } %>
</body>
</html>